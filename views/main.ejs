        /* height: 40px; */
      }
      .category_list li.current {
        font-size: 18px;
        font-weight: 700;
        align-items: flex-end;
        /* text-decoration: underline; */
      }
      .category_list li.current::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -8px;
        display: inline-block;
        width: 100%;
        height: 2px;
        background-color: #333;
      }
      .datalist_wrap {
        display: flex;
        width: 100%;
        gap: 20px;
        margin-top: 60px;
      }
      .datalist_lbox {
        width: 300px;
        min-width: 300px;
      }
      .datalist {
        display: flex;
        flex-wrap: wrap;
        gap: 40px 30px;
      }
      .datalist li {
        width: calc(33.3333% - 22px);
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
      }
      .datalist li:nth-child(3n) {
        width: calc(33.4% - 22px);
      }
      .list_box .img_box {
        height: 250px;
      }
      .list_box .img_box img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .list_box .info {
        padding: 20px;
      }
      .list_box .info p {
        margin-top: 10px;
      }
    </style>
